<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >

        <TextView
            android:id="@+id/article_viewer_textView_writer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="Writer" />

        <TextView
            android:id="@+id/article_viewer_textView_writeDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center_vertical|right"
            android:padding="3dp"
            android:text="WriteDate" />

    </LinearLayout>

    <ImageView
        android:id="@+id/article_viewer_imageView_photo"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/article_viewer_textView_title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="Title" />

    <TextView
        android:id="@+id/article_viewer_textView_contents"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:padding="3dp"
        android:text="Contents" />

</LinearLayout>